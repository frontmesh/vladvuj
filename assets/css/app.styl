@import 'nib'
// Variables 
ffamily = 'Lato', sans-serif

body 
  font-family: ffamily
  font-weight: 300
  opacity:0
  
  &.no-js
    opacity:1

.container
  margin-top 60px
  margin: 0
h1, h3 
  font-family: ffamily

h1#logo 
  font-family: ffamily
  font-weight:300
  font-size:46px
  letter-spacing:-.04em
  padding:45px 0 0 45px;
  text-transform: uppercase;
  background: url(/img/logo.png)
  background-repeat:no-repeat
  background-position: 350px 0 
  
  span 
    font-size:22px;
h2
  font-family: 'Dosis', sans-serif;
  font-weight: bold;
  text-transform:uppercase;
  width: 90%
  font-size: 18px
  letter-spacing: 0.05em

  &:first-child
    color:#00a8ff
  &:nth-child(3)
    color:#ffc208

h3
  margin: 20px 0
pre
  font-family: courier
  background-color: rgba(0,0,0,.8)
  color: yellow
  width: 100%
  margin-bottom: 20px
  padding: 10px
  border: 1px solid black

p
  font-size:18px
  line-height:26px

aside
  float:left
  width:100px
  font-size:24px
  font-weight: normal
  text-transform:uppercase
  padding: 62px 50px 20px
  
  a
    font-family: ffamily
    text-decoration:none
    font-weight: 300 !important
    padding: 2px 10px
    border-bottom:1px solid white
    position:relative
    z-index:1
    transition(all ease-in-out 500ms) 
    &:hover
      background-color: #e4e4e4
      border-bottom: 1px solid #ccc;
      border-left: 3px solid #000;
      z-index:2
      text-shadow:1px 1px 1px #fff;
    &:active 
      color:#999
      border-left-color:#ccc
      background-color: #fdfdfd
      transition-duration(100ms)

section.main-content
  float:right
  width:669px
  padding-left:20px
  padding-top:50px
  border-left:1px solid #ccc;
  
  
// Responsive
@media screen and (max-width:480px)

  h1#logo
    font-size: 36px
    padding:25px 0 0 25px;
    background-position: 260px -10px
  
  aside
    width: auto
    padding: 10px 0 0 20px
    
    li
      display:inline
      font-size:15px
      font-weight:bold
    a
      padding: 0px 6px 5px
      display:inline
      font-weight:800
      
      
@media screen and (min-width: 480px) and (max-width: 768px)

  h1#logo
    font-size: 40px
    padding:25px 0 0 25px;
    background-position: 300px -10px
  
  aside
    width: auto
    padding: 0 0 0 20px
  ul
    text-align:center
    li
      display:inline
      text-align:center
      font-size:20px
      font-weight:bold
  a
    padding: 0 15px 0
    font-weight:bold
  