@import 'nib'
// Variables 
ffamily = 'Lato','PT Sans', sans-serif
ffamily2 = 'PT Sans', 'Lato',sans-serif

// Colors 
bright-blue = #00a8ff;
bright-orange = #ffc208;
// General stuff 
ul 
  padding:0; margin:0
  li
    list-style:none;
a 
  text-decoration:none
  &:visited 
    color:#000

body 
  font-family: ffamily; font-weight: 300; opacity:0; margin:0;
  
  &.no-js
    opacity:1;

.container
  margin-top 60px; margin: 0; width:960px; overflow:hidden;
  
h1, h3 
  font-family: ffamily;

h1#logo 
  font-family: ffamily;
  font-weight:300;
  font-size:46px
  letter-spacing:-.04em
  padding:45px 0 0 45px;
  text-transform: uppercase;
  background: url(/img/logo.png)
  background-repeat:no-repeat
  background-position: 350px 0 
  margin:0 0 40px 0   

  span 
    font-size:22px;
h2
  font: bold 18px/24px "open sans";
  letter-spacing:-0.07em;
  text-transform:uppercase;
  width: 90%;

  &:first-child
    color:bright-blue;
  &:nth-child(3)
    color:bright-orangel

h3
  margin: 25px 0 30px -20px; letter-spacing: -.06em; word-spacing: .2em; font: bold 19px/20px ffamily; color:darker(#ccc, 30%); border-bottom:1px solid #ccc; padding-bottom:5px; 
  padding: 0 0 8px 20px; 
  
pre
  font-family: courier
  background-color: rgba(0,0,0,.8)
  color: yellow
  width: 100%
  margin-bottom: 20px
  padding: 10px
  border: 1px solid black

p
  font-size:17px
  line-height:26px
  font-family:ffamily
  font-style: normal

aside
  float:left; width:100px; font-size:24px; font-weight: normal; text-transform:uppercase; padding: 24px 50px 20px;
  a
    font-family: ffamily; text-decoration:none; font-weight: 300 !important; padding: 2px 10px; border-bottom:1px solid white; position:relative; 
    z-index:1
    border-left: 3px solid transparent;
    transition(all ease-in-out 500ms) 
    &:hover
      background-color: #e2e2e2
      border-bottom: 1px solid transparent;
      border-left: 3px solid #000;
      z-index:2
      text-shadow:1px 1px 1px #fff;
    &:active 
      color:#999
      border-left-color:transparent
      background-color: #fdfdfd
      border-top: 1px solid #ccc;
      border-right: 3px solid #ccc;
      transition-duration(100ms)
    &:visited
      text-decoration:none;

section.main-content
  float:right; width:669px; padding-left:20px; padding-top:10px; border-left:1px solid #ccc; min-height:400px;

.contact_me
  div
    margin:5px;
  input, select, textarea 
    width: 45%; padding:5px; font-family:ffamily; border: 1px solid bright-blue;
    &:focus 
      outline:none;
  label
    min-width:100px; display:inline-block; vertical-align:top; padding-top:5px;
  select 
    width:47%;
  textarea
    height:100px;
  input[type=submit]
    margin-left:105px; width: auto; background:#dedede; border:none; padding:7px 15px; text-shadow: 1px 1px 1px #fff; font-weight:bold; font-size:16px;
// Responsive
@media screen and (max-width:768px)

  h1#logo
    font-size: 36px
    padding:25px 0 0 25px;
    background-position: 260px -10px
  
  aside
    width: auto
    padding: 10px 0 0 10px
    float: none
    
    ul
    	display:table
    	margin:0 auto 
    	
	    li
        list-style:none;
	      display:inline
	      font-size:15px
	      font-weight:bold
	    a
	      padding: 5px
	      display:inline
	      font-weight:800
	      border:0
	      &:hover, &:active
	      	border:none
	      
  
  section.main-content
  	float:none
  	width:auto
  	text-align:justify
  
  .container
  	width: auto
  	padding-right: 20px
      
@media screen and (min-width: 480px) and (max-width: 768px)

  h1#logo
    font-size: 40px
    padding:25px 0 0 25px;
    background-position: 300px -10px
  
  aside
    width: auto
    padding: 0 0 0 20px
  ul
    text-align:center
    li
      display:inline
      text-align:center
      font-size:20px
      font-weight:bold
      width:20%
  	a
	    padding: 0 15px 0
	    font-weight:bold
	    width:20%
  
  section.main-content
  	float:none
  	width:auto
  	text-align:justify
  	 
 	.container
  	width: auto
  	padding-right: 20px
  	
